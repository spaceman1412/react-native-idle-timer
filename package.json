{
    "name": "react-native-idle-timer-detection",
    "version": "1.0.1",
    "description": "A React Native library for detecting user idle time with automatic pause/resume support for keyboard and app state changes",
    "keywords": [
        "react-native",
        "idle-timer",
        "idle-detection",
        "user-activity",
        "timeout",
        "inactivity",
        "expo"
    ],
    "main": "./lib/commonjs/index.js",
    "module": "./lib/module/index.js",
    "react-native": "./lib/module/index.js",
    "types": "./lib/typescript/src/index.d.ts",
    "source": "./src/index.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./lib/typescript/src/index.d.ts",
                "default": "./lib/module/index.js"
            },
            "require": {
                "types": "./lib/typescript/src/index.d.ts",
                "default": "./lib/commonjs/index.js"
            }
        },
        "./package.json": "./package.json"
    },
    "files": [
        "lib/commonjs",
        "lib/module",
        "lib/typescript/src",
        "README.md"
    ],
    "scripts": {
        "build": "bob build",
        "prepare": "bob build",
        "prepublishOnly": "bob build",
        "test": "jest",
        "demo:start": "pnpm -C Demo start",
        "demo:ios": "pnpm -C Demo start --ios",
        "demo:android": "pnpm -C Demo start --android",
        "demo:web": "pnpm -C Demo start --web"
    },
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-native": ">=0.70.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@jest/globals": "^30.2.0",
        "@testing-library/react-native": "^13.3.3",
        "@types/react": "~19.1.0",
        "babel-jest": "^30.2.0",
        "jest": "^30.2.0",
        "react": "19.1.0",
        "react-native": "0.81.5",
        "react-native-builder-bob": "^0.30.0",
        "react-test-renderer": "^19.1.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.2"
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            [
                "module",
                {
                    "esm": true
                }
            ],
            "typescript"
        ]
    },
    "license": "MIT",
    "repository": {
        "type": "git",
